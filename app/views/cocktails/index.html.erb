<div class="container">
  <h1>Welcome to Mr. Cocktail</h1>
    <h2>Cocktail List</h2>
    <div class="row">
      <% @cocktails.each do |drink| %>
      <p class="cards my-3 px-2 col-2 border text-center"><%= link_to drink.name , cocktail_path(drink) %></p>
      <% end %>
    </div>
    <div class="btn btn-info w-100">
      <%= link_to "Create cocktail", new_cocktail_path %>
    </div>
</div>

