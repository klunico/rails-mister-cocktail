<div class="container">
  <h1>Cocktails#show</h1>
    <p>Find me in app/views/cocktails/show.html.erb</p>
    <div class="card m-4 text-center">
      <%=  @cocktail.name %>
    </div>
      <div class="card">
        <% @cocktail.doses.each do |dose| %>
        <p><%= dose.description %> <%= dose.ingredient.name %> <%= link_to "delete", dose_path(dose), method: :delete %></p>
        <% end %>
      </div>
      <div class="d-flex justify-content-between">
        <p><%= link_to "Dose/Ingredient", new_cocktail_dose_path(params[:id])%> <%= link_to "Back to list", cocktails_path  %></p>
      </div>
</div>
